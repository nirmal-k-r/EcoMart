<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecomart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/main.css"/>
</head>


<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Ecomart</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- LEFT: stays on the left because of me-auto -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if (user){ %>
                    <% if (user.role==='admin'){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin</a>
                        </li>
                    <% } } %>
            </ul>

            <!-- RIGHT: everything after the me-auto block sits on the right -->
            <form class="d-flex me-3" role="search">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search" id="search">
            </form>

            <% if (user){ %>
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="btn btn-outline-primary" href="/auth/logout">Logout - <%=user.name%></a>
                    </li>
                </ul>
            <% } else{ %>
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="btn btn-outline-primary" href="/auth/login">Login</a>
                    </li>
                </ul>
            <% } %>
            </div>
        </div>
        </nav>



    <br><br>

    <script>
        // Search functionality
        document.getElementById('search').addEventListener('keydown', function() {
            //check if on home page
            if (window.location.pathname === '/') {
                const query = this.value.toLowerCase();

                //send request to server to get all products
                url= `/products/search?query=${query}`;
                fetch(url)
                .then(response => response.json())
                .then(data => {
                    //check if none and display message
                    console.log(data);
                    if (!data || !data.products || data.products.length === 0) {
                        document.getElementById('productRenderingSpace').innerHTML = '<p class="text-center">No products found</p>';
                        return;
                    }else{
                        const products = data.products;
                        document.getElementById('productRenderingSpace').innerHTML = '';

                        products.forEach(product => {
                            const productCard = `
                                <div class="col-md-3">
                                    <div class="card" style="width: 18rem;">
                                        <img class="card-img-top product-thumb" src="data:image/png;base64,${product.image}" alt="${product.name}">

                                        <div class="card-body text-center">
                                            <h5 class="card-title product-title">${product.name}</h5>
                                            <p class="text-muted">Rs ${product.price}</p>
                                            <button class="btn btn-primary">Add to cart</button>
                                        </div>
                                    </div>
                                </div>
                            `;
                            document.getElementById('productRenderingSpace').innerHTML += productCard;
                        });
                    }
                })
                .catch(error => {
                    console.error('Error fetching search results:', error);
                    document.getElementById('productRenderingSpace').innerHTML = '<p class="text-center">Error fetching search results</p>';
                });
            }

        });



    </script>